<Window x:Class="ChitChat.AppWindows.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChitChat.AppWindows"
        mc:Ignorable="d"
        Title="AddUserWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Add User" />
        <ComboBox x:Name="CBEmployee" 
                  DisplayMemberPath="Name"/>
        <Button x:Name="BAdd"
                Content="Add"
                Click="BAdd_Click" />
        <Button x:Name="BCancel"
                Content="Cancel"
                Click="BCancel_Click" />
    </Grid>
</Window>
